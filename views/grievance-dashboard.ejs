<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Grievance Cell Dashboard</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <header class="header">
      <div class="brand">
        <div class="logo">GC</div>
        <div>
          <div class="site-title">Grievance Cell</div>
          <div style="font-size:13px;color:var(--muted)">Handle student complaints</div>
        </div>
      </div>
      <div class="actions">
        <a href="/logout" class="btn secondary">Logout</a>
      </div>
    </header>

    <div class="card">
      <h3>Complaints Needing Grievance Action</h3>

      <table class="table">
        <thead>
          <tr>
            <th>Ref</th>
            <th>Title</th>
            <th>Category</th>
            <th>Student</th>
            <th>Description</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% complaints.forEach(c => { %>
            <tr>
              <td><%= c.referenceId %></td>
              <td><%= c.title %></td>
              <td><%= c.category %></td>
              <td><%= c.anonymous ? "Anonymous" : c.student?.name %></td>
              <td><%= c.description %></td>
              <td>
                <span class="badge <%= c.status === 'Pending' ? 'pending' : 'inprocess' %>">
                  <%= c.status %>
                </span>
              </td>

              <td style="display:flex; gap:8px;">
                <!-- Mark In Review -->
                <form method="POST" action="/grievance/review">
                  <input type="hidden" name="id" value="<%= c._id %>">
                  <button class="btn small" type="submit">Review</button>
                </form>

                <!-- Forward to Admin -->
                <form method="POST" action="/grievance/forward">
                  <input type="hidden" name="id" value="<%= c._id %>">
                  <button class="btn small primary" type="submit">Forward</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>

